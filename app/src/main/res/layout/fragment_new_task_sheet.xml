<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NewTaskSheet"
    android:orientation="vertical"
    android:background="?attr/mainColor50">


    <EditText
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What would you like to do?"
        android:textColor="?attr/textColorLight600"
        android:textSize="24sp"
        android:maxLength="50"
        android:maxLines="2">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/newTaskCalendarButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_calendar_month_24"
            app:tint="?attr/mainColor600"/>

        <ImageView
            android:id="@+id/newTaskPriorityButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/prioirty_no_flag_24" />

        <Space
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/newTaskAddButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_add_box_24"
            app:tint="?attr/mainColor600"/>
    </LinearLayout>


</LinearLayout>